<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/design_default_color_primary_dark"
    >

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_primary"
        android:backgroundTint="#00D81B60"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/buttn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="326dp"
            android:layout_toEndOf="@+id/buttn1"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="326dp"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="212dp"
            android:layout_marginTop="396dp"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="212dp"
            android:layout_marginTop="326dp"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttnsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="312dp"
            android:layout_marginTop="326dp"
            android:layout_marginEnd="11dp"
            android:text="+"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="396dp"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="396dp"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttnsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="312dp"
            android:layout_marginTop="396dp"
            android:layout_marginEnd="11dp"
            android:text="-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="466dp"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="466dp"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="214dp"
            android:layout_marginTop="466dp"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttnmul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="312dp"
            android:layout_marginTop="466dp"
            android:layout_marginEnd="11dp"
            android:text="*"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="536dp"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttndiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="312dp"
            android:layout_marginTop="536dp"
            android:layout_marginEnd="11dp"
            android:text="/"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttnclr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="536dp"
            android:text="Clear"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttnexp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="214dp"
            android:layout_marginTop="536dp"
            android:text="^"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="301dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="223dp"
            android:textAlignment="viewEnd"
            android:textColor="#E3E5F0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="301dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="132dp"
            android:textColor="#F0F1F7"
            android:textSize="20sp" />

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id = "@+id/NavBar"
        android:layout_gravity = "start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
